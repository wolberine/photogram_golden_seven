<h1>List of Photos</h1>

<a href="http://localhost:3000/photos/new_form">Add a New Photo</a>



  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h2>Thumbnail</h2>
      </div>
      <div class="col-md-4">
        <h2>Caption</h2>
      </div>
      <div class="col-md-4">
        <h2>Action</h2>
      </div>
    </div>


  <% @list_of_photos.each do |photo| %>
    <div class="row well">
      <div class="col-md-4">
        <img src="<%= photo.source %>" width="80">
      </div>
      <div class="col-md-4">
        <%= photo.caption %>
      </div>
      <div class="col-md-4">
        <a class="btn btn-primary" href="http://localhost:3000/photos/<%= photo.id %>">
          <i class="fa fa-picture-o"></i> Show
        </a>

        <a class="btn btn-warning" href="http://localhost:3000/photos/<%= photo.id %>/edit">
          <i class="fa fa-edit"></i> Edit
        </a>

        <a class="btn btn-danger" href="http://localhost:3000/delete_photo/<%= photo.id %>">
          <i class="fa fa-trash"></i> Delete
        </a>
      </div>
    </div>
  <% end %>
  </div>
